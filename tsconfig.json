{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "lib": [
      "es2015"
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/*/node_modules/@types/", "./node_modules/@types"]
  },
  "include": [
    "lib/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "../node_modules/@types/index.d.ts"
  ],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
}
